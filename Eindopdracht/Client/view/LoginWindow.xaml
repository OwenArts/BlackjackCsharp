<UserControl x:Class="Client.view.LoginWindow"
             x:Name="Window"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#A9A9A9"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        
        <UserControl Grid.Row="0" Grid.RowSpan="3" Grid.Column="1" Height="300" Width="600" HorizontalAlignment="Center" Background="LightGray">
        <StackPanel>
            <TextBlock Text="Welkom Gebruiker!" FontSize="22" TextAlignment="Center"></TextBlock>
            <Label Content="Login ID" FontSize="14" HorizontalAlignment="Center"></Label>
            <TextBox Name="LoginIdBox" FontSize="14" Margin="10,0,10,0" Text="{Binding Username}"></TextBox>
            <Label Content="Wachtwoord" FontSize="14" HorizontalAlignment="Center"></Label>
            <PasswordBox Name="PasswordBox" FontSize="14" Margin="10,0,10,0" PasswordChanged="OnPasswordChanged"></PasswordBox>
            <Button Margin="10,20,10,30" Content="Log in!" Height="50"  FontSize="16" Command="{Binding Path=LogIn}"></Button>
        </StackPanel>
</UserControl>
    </Grid>
</UserControl>
